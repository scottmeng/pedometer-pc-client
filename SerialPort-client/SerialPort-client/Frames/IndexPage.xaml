<Page x:Class="SerialPort_client.Frames.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Width="500" Height="400"
      Title="IndexPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Connect Pedometer" HorizontalAlignment="Stretch" Margin="10" Name="btnConnect" 
                VerticalAlignment="Stretch" Click="btnConnect_Click" Grid.Row="0" FontSize="18"/>
        <Button Content="View History" HorizontalAlignment="Stretch" Margin="10" Name="btnView" 
                VerticalAlignment="Stretch" Click="btnView_Click" Grid.Row="1" FontSize="18" />
    </Grid>
</Page>
